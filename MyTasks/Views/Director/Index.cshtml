@model List<Director>

<a  asp-action="Create" class="btn btn-primary">Create</a>
@foreach (var director in Model)
{
	
<div class="text-center">
<p>Name:@director.Name</p>
<p>Surname:@director.Surname</p>
<p>Age:@director.Age</p>
</div>


	<div class="d-flex justify-content-center">
		<form asp-action="Delete" method="post" asp-route-Id="@director.Id">
			<input class="btn btn-outline-danger" type="submit" value="Delete" />
		</form>
		<a asp-action="Update" class="btn btn-outline-warning" asp-route-Id="@director.Id">Update</a>

	</div>

	<hr />
}
